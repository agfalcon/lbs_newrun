<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/routeCanvas"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border_layout"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/dDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/routeCanvas"
        app:layout_constraintTop_toTopOf="@id/routeCanvas"
        android:text=""
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_medium"
        android:textColor="#959595"
        />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dDayTextView"
        app:layout_constraintTop_toBottomOf="@id/dDayTextView"
        app:layout_constraintBottom_toTopOf="@id/distanceTextView"
        android:text=""
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_medium"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dDayTextView"
        app:layout_constraintBottom_toBottomOf="@id/routeCanvas"
        android:text=""
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_medium"
        android:textColor="#959595"
        />

    <TextView
        android:id="@+id/velocityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/distanceTextView"
        app:layout_constraintBottom_toBottomOf="@id/routeCanvas"
        android:text=""
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_medium"
        android:textColor="#959595"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/velocityTextView"
        app:layout_constraintBottom_toBottomOf="@id/routeCanvas"
        android:text=""
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_medium"
        android:textColor="#959595"
        android:layout_marginStart="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>