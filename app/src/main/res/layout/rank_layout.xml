<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.home.HomeFragment"
    android:padding="6dp"
    >

    <ImageView
        android:id="@+id/rankImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="null"
        />

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/spoqa_bold"
        tools:text="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rankImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/distanceTextView"
        tools:text = "존잘용구"
        android:textSize="18sp"
        android:fontFamily="@font/spoqa_regualar"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/distanceUnitTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text = "31"
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_bold"
        android:textColor="@color/black"
        android:layout_marginEnd="2dp"
        />

    <TextView
        android:id="@+id/distanceUnitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text = "km"
        android:textSize="14sp"
        android:fontFamily="@font/spoqa_regualar"
        android:textColor="@color/black"

        />

</androidx.constraintlayout.widget.ConstraintLayout>