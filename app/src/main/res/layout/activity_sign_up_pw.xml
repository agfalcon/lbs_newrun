<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.SignUpPwActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.002"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.001" />

        <View
            android:id="@+id/contour"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9DEDE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            app:layout_constraintVertical_bias="0.024" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인에 사용할\n비밀번호를 입력해주세요."
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.152"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contour"
            app:layout_constraintVertical_bias="0.044" />

        <EditText
            android:id="@+id/text_input_signup_pw"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/text_box"
            android:hint="비밀번호 입력"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.393"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintVertical_bias="0.031" />

        <EditText
            android:id="@+id/text_input_signup_pw_check"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/text_box"
            android:hint="비밀번호 확인"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.393"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_signup_pw"
            app:layout_constraintVertical_bias="0.048" />

        <android.widget.Button
            android:id="@+id/btn_sign_up_complete"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/border_radius_box_color"
            android:text="가입하기"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_signup_pw_check" />

        <TextView
            android:id="@+id/check_7more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="□ 8자 이상"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign_up_complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_signup_pw_check"
            app:layout_constraintVertical_bias="0.211" />

        <TextView
            android:id="@+id/chekc_pw_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="□ 비밀번호 확인"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign_up_complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintStart_toEndOf="@+id/check_7more"
            app:layout_constraintTop_toTopOf="@+id/check_7more"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>